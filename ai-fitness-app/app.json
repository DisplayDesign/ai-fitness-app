{
  "expo": {
    "name": "AIフィットネス",
    "slug": "ai-fitness-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aifitness.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "このアプリはトレーニング動画の撮影にカメラを使用します",
        "NSPhotoLibraryUsageDescription": "このアプリはトレーニング写真の保存にフォトライブラリを使用します",
        "NSLocationWhenInUseUsageDescription": "このアプリは位置情報をトレーニング記録に使用します"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.aifitness.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE",
        "INTERNET"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "webpack"
    },
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-image-picker",
      "expo-notifications",
      "expo-location",
      "expo-haptics"
    ],
    "scheme": "aifitness",
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
} 